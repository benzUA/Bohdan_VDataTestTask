<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <ImageView
        android:id="@+id/comp_image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:srcCompat="@drawable/ic_companies_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/comp_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Название: "
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/comp_image"
        app:layout_constraintBottom_toTopOf="@+id/comp_staff_amount"/>

    <TextView
        android:id="@+id/comp_staff_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Количество сотрудников: "
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/comp_name_view"
        app:layout_constraintBottom_toTopOf="@+id/comp_staff_history"/>

    <TextView
        android:id="@+id/comp_staff_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="История:\n"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/comp_staff_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>