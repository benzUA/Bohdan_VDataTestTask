<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <ImageView
        android:id="@+id/staff_pic_view"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:srcCompat="@android:drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/staff_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Имя: "
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/staff_pic_view"
        app:layout_constraintBottom_toTopOf="@+id/staff_surname_view"/>

    <TextView
        android:id="@+id/staff_surname_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Фамилия: "
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/staff_name_view"
        app:layout_constraintBottom_toTopOf="@+id/staff_comp_view"/>

    <TextView
        android:id="@+id/staff_comp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Компания: "
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/staff_surname_view" />

    <Button
        android:id="@+id/staff_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:textSize="20sp"
        android:text="Изменить"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/staff_comp_view" />

</androidx.constraintlayout.widget.ConstraintLayout>